<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view = "http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    card_view:cardCornerRadius = "4dp"
    android:id ="@+id/card_view"
    android:layout_margin = "10dp"
    android:background="@color/cardview_shadow_end_color" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:textStyle="bold"
        tools:text="Test offering 1" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/tvTitle"
        tools:text="$25" />

    <ImageView
        android:id="@+id/ivOfferingPhoto"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_below="@+id/tvUser"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="4dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_marginTop="4dp"
        tools:text="ashlee" />

    <TextView
        android:id="@+id/tvCharity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivOfferingPhoto"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/ivCharityProfile"
        tools:text="Buy From a Black Woman" />

    <ImageView
        android:id="@+id/ivCharityProfile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/ivOfferingPhoto"
        android:layout_marginTop="4dp"
        tools:srcCompat="@tools:sample/avatars" />

</RelativeLayout>
</androidx.cardview.widget.CardView>
