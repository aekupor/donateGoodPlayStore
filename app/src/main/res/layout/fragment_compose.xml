<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ComposeFragment">

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="title of offering" />

    <EditText
        android:id="@+id/etPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTitle"
        android:layout_marginTop="4dp"
        android:hint="price" />

    <Button
        android:id="@+id/btnTakePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etQuantity"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:text="Take Photo" />

    <Button
        android:id="@+id/btnUploadPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTakePhoto"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:text="Upload Photo" />

    <ImageView
        android:id="@+id/ivComposePhoto"
        android:layout_width="285dp"
        android:layout_height="197dp"
        android:layout_below="@+id/etQuantity"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/no_image" />

    <Spinner
        android:id="@+id/spinnerCharity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivComposePhoto" />

    <EditText
        android:id="@+id/etTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerCharity"
        android:layout_marginTop="4dp"
        android:hint="tags" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTags"
        android:layout_marginTop="4dp"
        android:text="Submit" />

    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSubmit"
        android:layout_marginStart="65dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/btnSubmit"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/etQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTitle"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/etPrice"
        android:hint="quantity" />

    <Button
        android:id="@+id/btnTakeMultiple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnUploadPhoto"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:text="Take Multiple" />

    <EditText
        android:id="@+id/etVenmoCompose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTags"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/btnSubmit"
        android:hint="You must add your venmo username" />

</RelativeLayout>





